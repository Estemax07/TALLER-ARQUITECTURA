#include <stdio.h>
#include <ctype.h>

char convertirAMayuscula(char letra) {
    
    if (letra >= 'a' && letra <= 'z') {
        return letra - ('a' - 'A');
    } else {
       
        return letra;
    }
}


char obtenerLetra() {
    char letra;
    printf("Introduce una letra en minúscula: ");
    while (scanf(" %c", &letra) != 1 || !isalpha(letra)) {
        printf("Entrada inválida. Por favor ingresa una letra: ");
        while (getchar() != '\n');
    }
    return letra;
}


void mostrarResultado(char letra, char mayuscula) {
    printf("La letra mayúscula de '%c' es '%c'\n", letra, mayuscula);
}

int main() {
    
    char letra = obtenerLetra();
    char mayuscula = convertirAMayuscula(letra);
    mostrarResultado(letra, mayuscula);

    return 0;
}
